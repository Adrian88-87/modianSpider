<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
    <display-name>website</display-name>



    <servlet>
        <!-- 当前servlet的名称 -->
        <servlet-name>DataServlet</servlet-name>
        <!-- servlet所在的包名跟类名 -->
        <servlet-class>cn.pdmi.website.controller.DataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <!-- 必须于上一个servlet标签中的名称保持一致 -->
        <servlet-name>DataServlet</servlet-name>
        <!-- 这是你在浏览器上访问的地址,必须要提 /servlet/xxxx 格式，不然tomcat启动会报错-->
        <url-pattern>/servlet/dataServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>/WEB-INF/jsp/cnp.jsp</welcome-file>
    </welcome-file-list>
</web-app>
